{
  "hosting": {
    "public": "build", // Set the public folder where your build files are located
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html" // Redirect all requests to index.html (SPA)
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  }
}